<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/list_sep"
    >

    <TextView
        android:id="@+id/medal"
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/medal_green"
        android:gravity="center"
        android:text="@string/ex_word_id"
        android:textColor="@color/fgGreen"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/letters"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/solution"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@+id/medal"
        app:layout_constraintEnd_toStartOf="@id/stats"
        app:layout_constraintBottom_toBottomOf="@+id/medal"
        app:layout_constraintTop_toTopOf="@+id/medal" >

        <TextView
            android:id="@+id/l1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_white"
            android:text="@string/ex_letter"
            android:layout_marginHorizontal="1dp"
            android:textColor="@color/fgBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letters"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/l2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_white"
            android:text="@string/ex_letter"
            android:layout_marginHorizontal="1dp"
            android:textColor="@color/fgBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letters"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/l3"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_white"
            android:text="@string/ex_letter"
            android:layout_marginHorizontal="1dp"
            android:textColor="@color/fgBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letters"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/l4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_white"
            android:text="@string/ex_letter"
            android:layout_marginHorizontal="1dp"
            android:textColor="@color/fgBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letters"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/l5"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_white"
            android:text="@string/ex_letter"
            android:layout_marginHorizontal="1dp"
            android:textColor="@color/fgBlack"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letters"
            android:textSize="16sp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/letters"
        android:text="@string/moves_of"
        android:includeFontPadding="false"
        android:layout_marginBottom="3dp"
        android:textColor="@color/fgBlack"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/medal"
        app:layout_constraintEnd_toStartOf="@+id/info"
        app:layout_constraintStart_toEndOf="@+id/solution"
        app:layout_constraintTop_toTopOf="@+id/medal" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/info"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:insetLeft="4dp"
        android:insetTop="4dp"
        android:insetRight="4dp"
        android:insetBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/medal"
        app:layout_constraintEnd_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@+id/medal"
        app:backgroundTint="@color/fgGray1"
        app:icon="@drawable/ic_book"
        app:iconSize="14dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginEnd="20dp"
        android:insetLeft="4dp"
        android:insetTop="4dp"
        android:insetRight="4dp"
        android:insetBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/medal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/medal"
        app:backgroundTint="@color/fgBlue"
        app:icon="@drawable/ic_view"
        app:iconSize="16dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp" />






</androidx.constraintlayout.widget.ConstraintLayout>