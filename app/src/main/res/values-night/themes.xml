<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wortel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fgBlue</item>
        <item name="colorPrimaryVariant">@color/fgRed</item>
        <item name="colorOnPrimary">@color/bgWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fgBlue</item>
        <item name="colorSecondaryVariant">@color/fgRed</item>
        <item name="colorOnSecondary">@color/fgBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>